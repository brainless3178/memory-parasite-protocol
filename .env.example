# ============================================
# MEMORY PARASITE PROTOCOL - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Agent Identity (REQUIRED)
AGENT_ID=agent_alpha
AGENT_GOAL="Build a decentralized exchange (DEX) on Solana with optimal routing and AMM pools"

# Groq API (FREE - 14,400 requests/day)
# Get your key at: https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MAX_TOKENS=4096
GROQ_TEMPERATURE=0.7

# Supabase (FREE - 500MB PostgreSQL)
# Get credentials at: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# GitHub (for automated commits)
# Create a personal access token at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_REPO=username/memory-parasite-agent-alpha
GITHUB_BRANCH=main

# Solana Devnet (FREE testnet)
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=your_base58_private_key

# Agent Behavior
AGENT_CYCLE_INTERVAL=600  # 10 minutes between cycles
MAX_INFECTIONS_PER_CYCLE=3
INFECTION_ACCEPTANCE_THRESHOLD=0.6  # 60% confidence to accept
MAX_CONTEXT_INJECTIONS=10  # Keep last 10 injections in context
RETRY_QUEUE_MAX_SIZE=50

# Target Agents (comma-separated URLs)
# These are other agents this agent will try to infect
TARGET_AGENT_URLS=http://agent-beta.replit.app,http://agent-gamma.replit.app

# Server Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Dashboard
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
